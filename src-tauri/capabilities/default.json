{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window with PDF processing permissions",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    "dialog:default",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-read-dir",
    "fs:allow-mkdir",
    "fs:allow-exists",
    "fs:allow-stat",
    "fs:allow-copy-file",
    "fs:allow-create",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:scope-app-recursive",
    "fs:scope-home-recursive",
    "fs:scope-desktop-recursive",
    "fs:scope-document-recursive",
    "fs:scope-download-recursive",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-message",
    "dialog:allow-ask",
    "dialog:allow-confirm"
  ]
}
