{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "licitacao360",
  "version": "0.1.0",
  "identifier": "com.guilh.licitacao360",
  "build": {
    "beforeDevCommand": "npm --prefix ./angular run start",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm --prefix ./angular run build",
    "frontendDist": "./angular/dist/licitacao360/browser"
  },
  "app": {
    "windows": [
      {
        "title": "Licitação 360 - Processador de PDFs",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
